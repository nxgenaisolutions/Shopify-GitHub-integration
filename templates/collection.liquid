<div class="collection-wrapper">
  <div class="container">
    <div class="collection-header">
      <h1 class="collection-title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection-description rte">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>

    <div class="services-grid">
      {% for product in collection.products %}
        <div class="service-card">
          {% if product.metafields.custom.icon != blank %}
            <div class="icon">
              <i class="{{ product.metafields.custom.icon }}"></i>
            </div>
          {% else %}
            <div class="icon">
              <i class="fas fa-cog"></i>
            </div>
          {% endif %}
          
          <h3>{{ product.title }}</h3>
          <p>{{ product.description | strip_html | truncate: 150 }}</p>
          <a href="{{ product.url }}" class="learn-more">Learn More &rarr;</a>
        </div>
      {% endfor %}
    </div>

    {% if collection.products.size == 0 %}
      <div class="empty-collection">
        <p>No services available at this time.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .collection-wrapper {
    padding: 80px 0;
    min-height: 60vh;
  }
  
  .collection-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .collection-title {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 20px;
  }
  
  .collection-description {
    max-width: 700px;
    margin: 0 auto;
    color: #666;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
  }
  
  .service-card {
    background-color: var(--card-bg);
    padding: 30px;
    border-radius: 8px;
    box-shadow: var(--shadow);
    border-top: 4px solid var(--accent-color);
    transition: transform 0.3s;
    display: flex;
    flex-direction: column;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  .service-card .icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 20px;
  }
  
  .service-card h3 {
    font-size: 1.4rem;
    margin-bottom: 10px;
  }
  
  .service-card p {
    font-size: 0.95rem;
    color: #555;
    flex-grow: 1;
  }
  
  .service-card .learn-more {
    margin-top: 20px;
    font-weight: 600;
    color: var(--secondary-color);
    text-decoration: none;
  }
  
  .service-card .learn-more:hover {
    color: var(--accent-color);
  }
  
  .empty-collection {
    text-align: center;
    padding: 60px 0;
    color: #666;
  }
</style>